<% layout("/layouts/boilerplate")%>
<div class = "row"> 
    <div class = "col-8">
<body>
    <br><br>
    <h3> Create a New Listing </h3>
    <form method = "POST" action = "/listings" novalidate class ="needs-validation">
        <div class = "mb-3">
            <lable for = "title" class ="form-lable"> Title </lable>
            <input name = "listing[title]" placeholder = "enter title" type = "text" class = "form-control" required>
            <div class="valid-feedback"> Title Looks Good </div>
            <div class="invalid-feedback"> Enter a Title </div>
        </div>

        <div class = "mb-3">
            <lable for = "description" class ="form-lable"> Description </lable>
            <textarea name  = "listing[description]" class = "form-control" required></textarea>
            <div class="invalid-feedback"> Enter Some Text </div>
        </div>

        <div class = "mb-3">
            <lable for = "image" class ="form-lable"> Image Link </lable>
            <input name = "listing[image]" placeholder = "enter image URL/Link" type = "text" class = "form-control">
        </div>
        
        <div class="row">
            <div class = "mb-3 col-md-4">
                <lable for = "price" class ="form-lable"> Price </lable>
                <input name = "listing[price]" placeholder = "enter price" type = "number" class = "form-control" required>
                <div class="invalid-feedback"> Price is invalid </div>
            </div>

            <div class = "mb-3 col-md-8">
                <lable for = "country" class ="form-lable"> Country </lable>
                <input name = "listing[country]" placeholder = "enter country" type = "text" class = "form-control" required>
                <div class="invalid-feedback"> Enter a Country Name </div>
            </div>
        </div>

        <div class = "mb-3">
            <lable for = "location" class ="form-lable"> Location </lable>
            <input name = "listing[location]" placeholder = "enter location" type = "text" class = "form-control" required>
            <div class="invalid-feedback"> Location is invalid</div>
        </div>

        <br><br>
        <button class="btn btn-dark add-btn"> ADD </button>
        <br><br>
    </form>
    </body>
    </div>
</div>